{
  "swagger": "2.0",
  "info": {
    "description": "",
    "version": "1.0.0",
    "title": "Temperature Outfit API"
  },
  "host": "localhost:3000",
  "tags": [
    {
      "name": "location",
      "description": "지역"
    },
    {
      "name": "category",
      "description": "카테고리"
    },
    {
      "name": "product",
      "description": "옷 & 악세서리"
    },
    {
      "name": "outfit",
      "description": "옷차림"
    },
    {
      "name": "weather",
      "description": "날씨"
    }
  ],
  "paths": {
    "/api/location": {
      "get": {
        "tags": ["location"],
        "description": "전체 지역 조회",
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/LocationResponse"
              },
              "example": [
                {
                  "id": 1,
                  "name": "서울"
                },
                {
                  "id": 2,
                  "name": "경기도"
                },
                {
                  "id": 3,
                  "name": "인천"
                }
              ]
            }
          }
        }
      }
    },
    "/api/user/location": {
      "get": {
        "tags": ["location"],
        "description": "자신의 지역 조회",
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "$ref": "#/definitions/LocationResponse"
            }
          }
        }
      },
      "post": {
        "tags": ["location"],
        "produces": ["application/json"],
        "description": "자신의 지역 변경",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "locationId": {
                  "type": "number"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "변경 성공",
            "schema": {
              "$ref": "#/definitions/LocationResponse"
            }
          }
        }
      }
    },
    "/api/category": {
      "get": {
        "tags": ["category"],
        "description": "전체 카테고리 조회",
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/CategoryResponse"
              }
            }
          }
        }
      }
    },
    "/api/product": {
      "get": {
        "tags": ["product"],
        "produces": ["application/json"],
        "description": "내 옷 & 악세서리 목록 조회",
        "parameters": [
          {
            "in": "query",
            "name": "query",
            "type": "string"
          },
          {
            "in": "query",
            "name": "categoryId",
            "type": "string"
          },
          {
            "in": "query",
            "name": "color",
            "type": "string"
          },
          {
            "in": "query",
            "name": "page",
            "type": "integer",
            "minimum": 1,
            "default": 1
          },
          {
            "in": "query",
            "name": "limit",
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 10
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "$ref": "#/definitions/ProductResponse"
            }
          }
        }
      },
      "post": {
        "tags": ["product"],
        "description": "내 옷 & 악세서리 등록",
        "produces": ["application/json"],
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "name": "image",
            "in": "formData",
            "type": "file"
          },
          {
            "name": "name",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "categoryId",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "color",
            "in": "formData",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "등록 성공",
            "schema": {
              "$ref": "#/definitions/ProductResponse"
            }
          }
        }
      }
    },
    "/api/product/{productId}": {
      "get": {
        "tags": ["product"],
        "description": "내 옷 & 악세서리 조회",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "cuid"
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "$ref": "#/definitions/ProductDetailResponse"
            }
          },
          "404": {
            "description": "일치하는 옷 & 악세서리가 없음 or 내 옷 & 악세서리가 아님"
          }
        }
      },
      "put": {
        "tags": ["product"],
        "description": "내 옷 & 악세서리 변경",
        "produces": ["application/json"],
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "cuid"
          },
          {
            "name": "image",
            "in": "formData",
            "type": "file"
          },
          {
            "name": "name",
            "in": "formData",
            "type": "string"
          },
          {
            "name": "categoryId",
            "in": "formData",
            "type": "string"
          },
          {
            "name": "color",
            "in": "formData",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "변경 성공",
            "schema": {
              "$ref": "#/definitions/ProductDetailResponse"
            }
          },
          "400": {
            "description": "값 누락"
          },
          "404": {
            "description": "내 옷 & 악세서리가 아님"
          }
        }
      },
      "delete": {
        "tags": ["product"],
        "description": "내 옷 & 악세서리 삭제",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "cuid"
          }
        ],
        "responses": {
          "200": {
            "description": "삭제 성공",
            "schema": {
              "$ref": "#/definitions/ProductDetailResponse"
            }
          },
          "400": {
            "description": "값 누락"
          },
          "404": {
            "description": "내 옷 & 악세서리가 아님"
          }
        }
      }
    },
    "/api/outfit": {
      "get": {
        "tags": ["outfit"],
        "produces": ["application/json"],
        "description": "내 옷차림 목록 조회",
        "parameters": [
          {
            "in": "query",
            "name": "startDate",
            "type": "string",
            "format": "date"
          },
          {
            "in": "query",
            "name": "endDate",
            "type": "string",
            "format": "date"
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/OutfitResponse"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["outfit"],
        "description": "내 옷차림 등록",
        "produces": ["application/json"],
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "name": "date",
            "in": "formData",
            "required": true,
            "type": "string",
            "format": "date",
            "default": "2022-01-01"
          },
          {
            "name": "image",
            "in": "formData",
            "type": "file"
          },
          {
            "name": "locationId",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "productsId",
            "in": "formData",
            "required": true,
            "type": "string",
            "description": "여러개를 ','로 구별한다. ex) id1,id2,id3"
          },
          {
            "name": "comment",
            "in": "formData",
            "type": "string"
          },
          {
            "name": "rating",
            "in": "formData",
            "type": "integer",
            "minimum": 0,
            "maximum": 10,
            "default": 0
          }
        ],
        "responses": {
          "201": {
            "description": "등록 성공",
            "schema": {
              "$ref": "#/definitions/OutfitResponse"
            }
          },
          "400": {
            "description": "date 누락"
          }
        }
      }
    },
    "/api/outfit/{outfitId}": {
      "get": {
        "tags": ["outfit"],
        "description": "내 옷차림 조회",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "outfitId",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "cuid"
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "$ref": "#/definitions/OutfitResponse"
            }
          },
          "404": {
            "description": "일치하는 옷차림이 없음"
          }
        }
      },
      "put": {
        "tags": ["outfit"],
        "description": "내 옷차림 변경",
        "produces": ["application/json"],
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "name": "outfitId",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "cuid"
          },
          {
            "name": "date",
            "in": "formData",
            "type": "string",
            "format": "date"
          },
          {
            "name": "image",
            "in": "formData",
            "type": "file"
          },
          {
            "name": "productsId",
            "in": "formData",
            "type": "string",
            "description": "여러개를 ','로 구별한다. ex) id1,id2,id3"
          },
          {
            "name": "comment",
            "in": "formData",
            "type": "string"
          },
          {
            "name": "rating",
            "in": "formData",
            "type": "integer",
            "minimum": 0,
            "maximum": 10
          }
        ],
        "responses": {
          "200": {
            "description": "변경 성공",
            "schema": {
              "$ref": "#/definitions/OutfitResponse"
            }
          },
          "400": {
            "description": "값 누락"
          },
          "404": {
            "description": "내 옷차림이 아님"
          }
        }
      },
      "delete": {
        "tags": ["outfit"],
        "description": "내 옷차림 삭제",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "outfitId",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "cuid"
          }
        ],
        "responses": {
          "200": {
            "description": "삭제 성공",
            "schema": {
              "$ref": "#/definitions/OutfitResponse"
            }
          },
          "400": {
            "description": "값 누락"
          },
          "404": {
            "description": "내 옷차림이 아님"
          }
        }
      }
    },
    "/api/weather": {
      "get": {
        "tags": ["weather"],
        "produces": ["application/json"],
        "description": "날씨 조회",
        "parameters": [
          {
            "in": "query",
            "name": "date",
            "type": "string",
            "format": "date"
          },
          {
            "in": "query",
            "name": "locationId",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "$ref": "#/definitions/WeatherResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "LocationResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 1
        },
        "name": {
          "type": "string",
          "example": "서울"
        }
      }
    },
    "CategoryResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "top"
        },
        "name": {
          "type": "string",
          "example": "상의"
        },
        "children": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "sleeveless"
              },
              "name": {
                "type": "string",
                "example": "민소매"
              }
            }
          }
        }
      }
    },
    "ProductResponse": {
      "type": "object",
      "properties": {
        "page": {
          "type": "integer",
          "description": "[nullable] 요청한 page"
        },
        "maxPage": {
          "type": "integer",
          "description": "[nullable] 최대 요청 가능한 page"
        },
        "limit": {
          "type": "integer",
          "description": "[nullable] 요청한 limit"
        },
        "products": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductDetailResponse"
          }
        }
      }
    },
    "ProductDetailResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "cuid",
          "example": "cl5qjhkic000409mi4nmw7epr"
        },
        "name": {
          "type": "string"
        },
        "categoryId": {
          "type": "string"
        },
        "color": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "OutfitResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "cuid",
          "example": "cl5qjhkic000409mi4nmw7epr"
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "locationId": {
          "type": "integer"
        },
        "weather": {
          "$ref": "#/definitions/WeatherResponse"
        },
        "imageUrl": {
          "type": "string"
        },
        "products": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductResponse"
          }
        },
        "comment": {
          "type": "string"
        },
        "rating": {
          "type": "integer",
          "format": "int32",
          "minimum": 0,
          "maximum": 100
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "WeatherResponse": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date"
        },
        "locationId": {
          "type": "integer",
          "format": "int32"
        },
        "status": {
          "$ref": "#/definitions/WeatherStatus"
        },
        "temperature": {
          "type": "integer",
          "description": "예보일 때 현재온도, 기록일 때 평균온도"
        },
        "lowestTemperature": {
          "type": "integer"
        },
        "highestTemperature": {
          "type": "integer"
        },
        "isForecast": {
          "type": "boolean",
          "description": "true면 예보, false면 기록"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "WeatherStatus": {
      "type": "string",
      "enum": ["sun", "cloud", "rain", "snow"]
    }
  }
}
